<h2>Edit Fishtank</h2>

<form action="/fishtanks/<%= @fishtank.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p>Name: <input type="text" name="name" value="<%= @fishtank.name %>"></p>
  <p>Fish Capacity: <input type="number" name="fish_capacity" value="<%= @fishtank.fish_capacity %>"></p>
  
  <input type="submit" value="Update">
</form>

